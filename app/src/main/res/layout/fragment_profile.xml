<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7F7"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar_profile">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:textColor="#fff"
            />
    </android.support.v7.widget.Toolbar>



    <RelativeLayout
        android:id="@+id/rel"
        android:layout_below="@id/toolbar_profile"
        android:layout_width="match_parent"
        android:layout_height="180dp">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:src="@drawable/facebookprofile_301007399129_640x360" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reno Irwan"
            android:textColor="#000"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/info"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_item"
        android:layout_below="@id/rel"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/nomor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08234567898"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawablePadding="12dp"
            android:layout_marginLeft="40dp"/>

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="#AFB1B3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="75dp"/>
        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="#AFB1B3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="135dp"/>

        <TextView
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="90dp"
            android:text="Jl.Soedirman Bae Kudus"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:drawablePadding="12dp"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RenoIrwan@gmail.com"
            android:layout_marginTop="155dp"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="12dp"
            android:layout_marginLeft="40dp"/>



    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_item"
        android:drawableRight="@drawable/ic_navigate_next_black_24dp"
        android:background="@drawable/edit_round"
        android:text="LOGOUT"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        tools:ignore="OnClick" />

</RelativeLayout>